<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:AvaloniaDesktop.ViewModels"
             x:Class="AvaloniaDesktop.Views.HomeView">
	<Design.DataContext>
		<vm:HomeViewModel/>
	</Design.DataContext>
	
	<Grid 
		Margin="3"
		ColumnDefinitions="250,*">
		<TreeView 
			SelectedItem="{Binding Path=SelectedDepartment}"
			MinWidth="200"
			Items="{Binding Path=ItemsDepartmentsList}"
			Grid.Column="0">
			<TreeView.ItemTemplate>
				<TreeDataTemplate  
					ItemsSource = "{Binding Child }">
					<TextBlock
						Tag  = "{Binding Id}"  
						Text = "{Binding Name}" 
					/>
				</TreeDataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>
		<GridSplitter
			Background="Gray"
			HorizontalAlignment="Right"
			Width="2"
			Grid.Column="0"/>
		<TextBlock 
			Grid.Column="1"
			Classes="h3"
			Text="{Binding Path=SelectedDepartment.Name}"
			/>
	</Grid>
</UserControl>
